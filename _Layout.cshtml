<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />

    <style>
        .nav-item {
            margin-right: 30px;
        }
        .he2 {
            width: 100%;
            height: 50px;
            position: absolute;
            background: DodgerBlue;
            top: 100px;
        }

        .in1 {
            position: absolute;
            top: 40px;
            left: 400px;
            z-index: 4;
        }

        .search-icon {
            position: relative;
            left: -50px;
            top: -15px;
            z-index: 4;
            cursor: pointer;
        }

        .bt {
            width: 80px;
            height: 40px;
            align-items: center;
            align-content: center;
            position: absolute;
            margin-right: 40px;
            top: 20px;
            right: 180px;
        }

            .bt i {
                font-size: 40px;
                position: relative;
                left: 10px;
                color: LightGray;
                cursor: pointer;
                z-index: 3;
            }

                .bt i:hover {
                    color: dodgerblue;
                }

        .fa-sliders-h {
            font-size: 0px;
        }

        #sidenav {
            width: 250px;
            height: 100vh;
            position: fixed;
            right: -250px;
            top: 0;
            background: #f67c92;
            z-index: 5;
            transition: 0.5s;
        }

            #sidenav ul li {
                list-style: none;
                margin: 50px 20px;
            }

                #sidenav ul li a {
                    text-decoration: none;
                    color: #fff;
                }

        @@media only screen and (max-width:1070px) {
            .bt {
                display: none;
            }

            .he2 {
                width: 99.2%;
            }

            .fa-sliders-h {
                display: inline-block;
                font-size: 40px;
                position: absolute;
                right: 30px;
                top: 40px;
                color: dodgerblue;
                z-index: 6;
                cursor: pointer;
            }

            .in1 {
                display: none;
            }

            .search-icon {
                display: none;
            }

            #menu {
                width: 40px;
                right: 50px;
            }
        }

        @@media only screen and (max-width:770px) {

            .he2 {
                display: none;
            }
        }

        @@media only screen and (max-width:1200px) {
        }
    </style>
</head>
<body>
    <header style="width:100%">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="height:150px;border-bottom:20px solid red;width:100%">
            <a class="navbar-brand" href="#"><img src="~/pictures/logo.jpg" style="width:140px;margin-right:10px;margin-left:50px;margin-bottom:40px;"></a>
            <div class="container-fluid">


                <i class="fas fa-sliders-h" id="menu"></i>


                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto" style="position:relative;top:50px;z-index:3;text-transform:uppercase;font-weight:bold">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" style="color:white">
                                Home

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:white">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:white">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:white">About</a>
                        </li>

                    </ul>
                    <form class="d-flex" style="margin-left:100px">
                        <input class="form-control me-sm-2 in1" type="text" placeholder="Search" style="margin-right:20px;width:350px">
                        <div class="search-icon">
                            <i class="fas fa-search"></i>
                        </div>
                    </form>


                    <div class="bt"> <i class="fas fa-user" style="left:0px"></i><p>Login</p></div>
                    <div class="bt" style="right:100px"> <i class="fas fa-user-plus"></i><p>Register</p></div>
                    <div class="bt" style="right:10px"> <i class="fas fa-shopping-cart" style="left:0px"></i><p>My Cart</p></div>

                </div>
            </div>

        </nav>
        <span class="he2"></span>
    </header>
    <nav id="sidenav">
        <ul>
            <li><a href="#header">Home</a></li>
            <li><a href="#about">about us</a></li>
            <li><a href="#features">features</a></li>
            <li><a href="#courses">courses</a></li>
            <li><a href="#offers">offer</a></li>
            <li><a href="#contact">contact</a></li>
        </ul>
    </nav>

    <div class="container" style="width:100%;">
        <main role="main" class="pb-3" style="width:100%">
            @RenderBody()
        </main>
    </div>
    <script>
        var menubtn = document.getElementById("menu");
        var sidenav = document.getElementById("sidenav");
        sidenav.style.right = "-250px";

        menubtn.onclick = function () {
            if (sidenav.style.right == "-250px") {
                sidenav.style.right = "0px";

            }
            else {
                sidenav.style.right = "-250px";
            }
        }

        var scroll = new SmoothScroll('a[href*="#"]', {
            speed: 500,
            speedAsDuration: true
        });
    </script>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
