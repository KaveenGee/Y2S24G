@model IEnumerable<ITP.Models.excessfaultyclass>

@{
    ViewData["Title"] = "Index";
}

<body style="background-image: linear-gradient(#00008b, #483d8b,#6a5acd,#4682b4,#87ceeb); ">
    @*<body style="background-color:darkblue">*@


    <div class="col-md-12" style="background-color:white;margin-top:2%;border-radius:20px;padding:50px;width:1100px;margin-left:100px;height:600px">
        <div class="button" style="position:absolute;margin-left:80%;color:black">
            <button onclick="document.location='https://localhost:44333/Home/Index'">HOME</button>
        </div>


        <h1 style="text-align: center; color: darkblue;"><b>EXCESS/FAULTY LOG</b></h1>

        <div class="supplierButton" style="position:absolute;margin-left:15px;margin-top:1%">
            <p>
                <a asp-action="Create" class="btn btn-outline-dark">Add New Excess/Faulty Count <i class="far fa-plus-square"></i> </a>
            </p>
        </div>
        @*<div class="searchCont" style="float:right;margin-top:40px;">
            <form method="get" asp-action="Index">
                <p>
                    <input type="search" placeholder="Enter ExcessFaultyStatus...." value="@ViewData["GetExcessFaultydetails"]" name="ExcessFaultyLogsearch" style="width:300px;border-color:Highlight;border-radius:8px;height:30px;padding:5px" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </p>
            </form>
        </div>*@

        <div class="container-fluid">
            <div class="table">
                <table class="table-sm" style="background-color:azure; margin-top:7%">
                    <thead style="background-color:deepskyblue">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SupplierID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SupplyDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ExcessFaultyStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuantityPurchased)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reason)
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplyDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExcessFaultyStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuantityPurchased)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reason)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.SupplierID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <style>
        tr:nth-child(even) {
            background-color: #dcdddd;
        }

        tr:hover {
            background-color: #a4bff1;
        }
    </style>
</body>