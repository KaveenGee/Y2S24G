@model ITP.Models.excessfaultyclass

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:#167398">Edit Details Of Excess/Faulty Goods</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label"></label>
                <input asp-for="SupplierID" class="form-control" readonly />
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control" />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplyDate" class="control-label"></label>
                <input asp-for="SupplyDate" class="form-control" />
                <span asp-validation-for="SupplyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExcessFaultyStatus" class="control-label"></label>
                <input asp-for="ExcessFaultyStatus" class="form-control" />
                <span asp-validation-for="ExcessFaultyStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityPurchased" class="control-label"></label>
                <input asp-for="QuantityPurchased" class="form-control" />
                <span asp-validation-for="QuantityPurchased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
