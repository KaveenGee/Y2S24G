@model ITP.Models.DriverModels.NewDriverClass


@{
    Layout = "_Layout2";
    ViewData["Title"] = "LogDriverDetails";
}



<h1 class="display-4" style="color:midnightblue">My Driver Account</h1>
<div class="p-4 rounded border row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_ID)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Driver_ID)
            </div>





        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_Name)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Driver_Name)
            </div>





        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.username)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.username)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Email)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Contact_Number)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Contact_Number)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_Description)
            </div>
            <div class="card" style="width:30rem">
                @Html.DisplayFor(model => model.Driver_Description)
            </div>
        </div>



        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Type)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Type)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Number)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Number)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Capacity)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Capacity)
            </div>
        </div>



        <div class="form-group">
            @Html.ActionLink("Edit", "LogDriverEdit", new { id = Model.Driver_ID }, new { @class = "btn btn-outline-primary" }) |
            <a class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" style="color:white">Log Out</a>
        </div>
    </div>




    <div class="col-3">
        <img src="~/Images/Driver/@ViewBag.img" class="rounded-circle" width="100%" height="300px" object-fit="contain" />
        <br/>
        <form asp-action="AddProfilePic" enctype="multipart/form-data" style="margin-top:20px">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            <div class="form-group input-group">
                <!--<div class="input-group-prepend">-->
                    @*<span class="input-group-text"> <i class="fas fa-id-card"></i> </span>*@
                <!--</div>-->
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <input type="submit" class="btn btn-success" />
            </div>



        </form>



    </div>
    <div class="col-1"></div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" >
                <h5 class="modal-title" id="exampleModalLabel">Confirm LogOut</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger" asp-action="Driver_Login">LogOut</a>
            </div>
        </div>
    </div>
</div>