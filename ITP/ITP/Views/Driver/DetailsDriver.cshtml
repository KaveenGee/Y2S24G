@model ITP.Models.DriverModels.NewDriverClass


@{
    ViewData["Title"] = "DetailsDriver";
}



<h1 class="display-4" style="color:midnightblue">Driver Details</h1>
<div class="p-4 rounded border row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_ID)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Driver_ID)
            </div>





        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_Name)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Driver_Name)
            </div>





        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.username)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.username)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Email)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Email)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Contact_Number)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Contact_Number)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Driver_Description)
            </div>
            <div class="card" style="width:30rem">
                @Html.DisplayFor(model => model.Driver_Description)
            </div>
        </div>



        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Type)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Type)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Number)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Number)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.Vehicle_Capacity)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.Vehicle_Capacity)
            </div>
        </div>



        <div class="form-group">
            @Html.ActionLink("Edit", "EditDriver", new { id = Model.Driver_ID }, new { @class = "btn btn-outline-primary" }) |
            <a class="btn btn-secondary" asp-action="DriverIndex">Back to List</a>
        </div>
    </div>




    <div class="col-3">
        <img src="~/Images/Driver/@ViewBag.img" class="rounded-circle" width="100%" height="300px" object-fit="contain" />





    </div>
    <div class="col-1"></div>
</div>