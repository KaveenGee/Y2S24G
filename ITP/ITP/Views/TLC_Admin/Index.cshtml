@{
    Layout = null;
}
@model ITP.Models.DropModel
<head>
    <style>
        .login-block {
            float: left;
            width: 100%;
            padding: 50px 0;
        }

        .banner-sec {
            background-image: url('/Images/Customer/admin_login_pic.svg');
            background-color: transparent !important;
            background-repeat: no-repeat;
            background-position: 100px 50px;
            background-size: contain;
            min-height: 500px;
            border-radius: 0 10px 10px 0;
            padding: 0;
        }

        .container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 15px 20px 0px rgba(0,0,0,0.1);
            height: 500px;
        }

        .carousel-inner {
            border-radius: 0 10px 10px 0;
        }

        .carousel-caption {
            text-align: left;
            left: 5%;
        }

        .login-sec {
            padding: 50px 30px;
            position: relative;
        }

            .login-sec .copy-text {
                position: absolute;
                width: 80%;
                bottom: 20px;
                font-size: 13px;
                text-align: center;
            }

                .login-sec .copy-text i {
                    color: #536DFE;
                }

                .login-sec .copy-text a {
                    color: #536DFE;
                }

            .login-sec h2 {
                margin-bottom: 30px;
                font-weight: 800;
                font-size: 30px;
                color: #536DFE;
            }

                .login-sec h2:after {
                    content: " ";
                    width: 100px;
                    height: 5px;
                    background: #0099ff;
                    display: block;
                    margin-top: 20px;
                    border-radius: 3px;
                    margin-left: auto;
                    margin-right: auto
                }

        .btn-login {
            background: #536DFE;
            color: #fff;
            font-weight: 600;
        }

        .banner-text {
            width: 70%;
            position: absolute;
            bottom: 40px;
            padding-left: 20px;
        }

            .banner-text h2 {
                color: #fff;
                font-weight: 600;
            }

                .banner-text h2:after {
                    content: " ";
                    width: 100px;
                    height: 5px;
                    background: #FFF;
                    display: block;
                    margin-top: 20px;
                    border-radius: 3px;
                }

            .banner-text p {
                color: #fff;
            }

        body {
            background-image: linear-gradient(rgba(50,135,232,1),rgba(124,173,221,1)) !important;
        }

        option {
            margin-bottom: 7px;
        }
    </style>
</head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center" style="color: black">Manager Login</h2>
                <form class="login-form" asp-action="ManagerLogin">
                    <input type ="hidden" id="t1" name="type1" />
                    <div class="form-group text-center">
                        @Html.DropDownListFor(m => m.Type, DropModel.GetSelectItems(),new {id = "id1" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="">Username</label>
                        <input type="text" class="form-control" placeholder="" name="username" onfocus="fun()">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="">Password</label>
                        <input type="password" class="form-control" placeholder="" name="password">
                    </div>


                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input">
                            <small>Remember Me</small>
                        </label>
                        <button type="submit" class="btn  float-right" style="background-color:#0099ff !important;color:white" @*asp-action="CustomerList" asp-controller="TLC_Admin"*@ >Submit</button>
                    </div>

                </form>
                <div class="copy-text"> <i class="fa fa-heart"></i>  <a  asp-action="Owner_dashboard" asp-controller="TLC_Admin" style ="color:#0099ff">Forget Password</a></div>
            </div>
            <div class="col-md-8 banner-sec">


            </div>
        </div>
    </div>
</section>
<script>

    var fun = function () {
        var d = $("#id1").val();
        $("#t1").val(d);
    }
</script>