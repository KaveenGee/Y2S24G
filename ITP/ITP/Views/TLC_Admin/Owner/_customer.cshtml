        <form id="form1" asp-action="sendEmails" enctype="multipart/form-data">

            <div>
                <input type="file" asp-for="Imagename" onchange="showImagePreview(this)" class="btn btn-primary" accept="image/*" id="pic" />
                <br /><br />
                <img id="imgPreview" alt="Select an Image" width="320" src="~/Images/Customer/def.jpg" />
            </div>
            <div class="input-group mb-3" style="margin-top:50px">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-default">Email-Title</span>
                </div>
                <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" asp-for="Email_title">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Message</span>
                </div>
                <textarea class="form-control" aria-label="With textarea" asp-for="Email_body"></textarea>
            </div>
            <input type="submit" class="btn btn-success" style="color:white;margin-top:30px;margin-left:100px" id="sendmails" value="Send Emails" />
        </form>




        <script type="text/javascript">
            function showImagePreview(input) {
                if (input.files && input.files[0]) {
                    var filerdr = new FileReader();
                    filerdr.onload = function (e) {
                        $('#imgPreview').attr('src', e.target.result);
                    }
                    filerdr.readAsDataURL(input.files[0]);
                }
            }
        </script>


