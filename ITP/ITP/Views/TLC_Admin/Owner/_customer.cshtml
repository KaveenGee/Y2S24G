<script>







        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'month');
            data.addColumn('number', 'Customers');


            $.getJSON("@Url.Action("draw","TLC_Admin")", null, function (chartData) {
        $.each(chartData, function (i, item) {
            data.addRow([item.month, item.count]);
        });


                 var options = {
                     title: 'Customer Registration',
                     curveType: 'function',
                     legend: { position: 'bottom' }
                 };

                 var chart = new google.visualization.ColumnChart(document.getElementById('char_div'));
        chart.draw(data, options);
    });
    }



     google.charts.load('current', { 'packages': ['corechart'] });
