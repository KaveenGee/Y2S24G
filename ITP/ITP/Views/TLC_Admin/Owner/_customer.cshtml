<div class="row">
<div id="char_div" style="margin-left:100px;" class="col-md-10">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
   <script type="text/javascript" src="https://www.google.com/jsapi"></script>

</div>
    </div>
<script>
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'month');
            data.addColumn('number', 'Customers');


            $.getJSON("@Url.Action("draw","TLC_Admin")", null, function (chartData) {
        $.each(chartData, function (i, item) {
            data.addRow([item.month, item.count]);
        });


                 var options = {
                     title: 'Customer Registration',
                     curveType: 'function',
                     legend: { position: 'bottom' }
                 };

                 var chart = new google.visualization.ColumnChart(document.getElementById('char_div'));
        chart.draw(data, options);
    });
}
</script>
