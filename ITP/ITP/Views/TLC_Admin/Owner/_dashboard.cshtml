<div class="container" id="con">

    <div class="row">
        <div class="card text-center" style="margin-top: 30px; margin-left: 30px; margin-right: 30px;">
            <div class="card-header">
                Featured
            </div>
            <div class="card-body" style="background-color:white">
                <h3 class="card-title">Welcome Back</h3>
                <p class="card-text"></p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            <div class="card-footer text-muted">
                05 th Tuesday / 12.00am
            </div>
        </div>
    </div>
    
    <div class="container-fluid px-4" style="margin-left:30px;">
        <div class="row g-3 my-2">
            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">@ViewBag.cuscount</h3>
                        <p class="fs-5">Users</p>
                    </div>
                    <i class="fas fa-users fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">@ViewBag.itemcount</h3>
                        <p class="fs-5">Products</p>
                    </div>
                    <i class="fas fa-tv fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">3899</h3>
                        <p class="fs-5">Employees</p>
                    </div>

                    <i class="fas fa-users-cog fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">@ViewBag.ocount</h3>
                        <p class="fs-5">Orders</p>
                    </div>
                    <i class="fas fa-shopping-cart fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>
        </div>

        <div class="row g-3 my-2">
            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">720</h3>
                        <p class="fs-5">Income</p>
                    </div>
                    <i class="fas fa-money-bill-alt fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">4920</h3>
                        <p class="fs-5">Suppliers</p>
                    </div>
                    <i class="fas fa-people-carry fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">3899</h3>
                        <p class="fs-5">Vehicals</p>
                    </div>
                    <i class="fas fa-truck fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
                    <div>
                        <h3 class="fs-2 counter">25</h3>
                        <p class="fs-5">Riviews</p>
                    </div>
                    <i class="fas fa-newspaper fs-1 primary-text border rounded-full secondary-bg p-3"></i>
                </div>
            </div>
        </div>
    </div>


</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script>


    $(document).ready(function () {
        $('.counter').counterUp({
            delay: 10,
            time: 1200
        });
    });
</script>