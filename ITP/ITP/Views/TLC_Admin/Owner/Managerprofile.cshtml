
@{
    ViewData["Title"] = "Managerprofile";
    Layout = "_Layout1";
}

@model ITP.Models.Admin
@{
    Admin ob1 = ViewBag.ob;
}
<head>
    <style>
        .mb-0 {
            font-weight: bold;
        }

        .container {
            background-color: #DCDCDC;
        }

        #footer {
            display: none;
        }
        body {
            background-color: #DCDCDC;
        }
    </style>
</head>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container" style="width:100% !important">
        <div class="main-body">

            <!--
    <nav aria-label="breadcrumb" class="main-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
        </ol>
    </nav>
        <!-- /Breadcrumb -->

          




            <div class="row gutters-sm" style="margin-top:60px;">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/Images/Manager/@ViewBag.img" class="rounded-circle" width="150" height="150" id="img">
                                <div class="mt-3">
                                    <h4>@ob1.Name</h4>
                                    <form asp-action="AddProfilePic" enctype="multipart/form-data">
                                        <span asp-validation-for="Imagefile" class="text-danger"></span>
                                        <div class="form-group input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"> <i class="fas fa-id-card"></i> </span>
                                            </div>
                                            <input asp-for="Imagefile" class="form-control" placeholder="Enter nic" accept="image/*" />
                                            <input type="submit" class="btn btn-success" />

                                        </div>

                                    </form>

                                    <div class="row" style="margin-top:20px;">
                                        <div class="col-md-6">
                                            @using (Html.BeginForm("deleteuser", "Customer", FormMethod.Post))
                                            {
                                                <input type="submit" name="submit" value="Remove" class="btn btn-danger" />
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-outline-danger">Logout</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap" id="prof">
                                <a href="#"> <i class="fa fa-user"></i> Profile</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap" id="edit">
                                <a href="#"> <i class="fa fa-calendar"></i> Edit profile</a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <a href="#"> <i class="fa fa-edit"></i> Activities</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-md-8" id="change1">

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Admin ID</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Admin_ID
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Name
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Username</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Username
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Password</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @{int l = ob1.Password.Length;
                                        String h = "";
                                        for (int i = 0; i < l; i++)
                                        {
                                            h = h + "*";

                                        }


                                    }
                                    @h
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Phone_Number
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">NIC</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.NIC
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Position</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @ob1.Type
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">

                                </div>
                            </div>
                        </div>
                    </div>





                </div>
            </div>

        </div>
    </div>
    <script>
         document.getElementById("prof").onclick = function () { myFunction() };
                    function myFunction() {

                     $("#change1").load("@Html.Raw(Url.Action("render1", "TLC_Admin")) ")
        }

         document.getElementById("edit").onclick = function () { myFunction1() };
                    function myFunction1() {

                     $("#change1").load("@Html.Raw(Url.Action("render2", "TLC_Admin")) ")
    }

    </script>

