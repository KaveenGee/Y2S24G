    <canvas id="myChart" style="width:100%; height:29px;"></canvas>

    <script>
            var xValues = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            var yValues = [55, 49, 44, 24, 28, 30, 34, 48, 50, 37, 53, 41];
