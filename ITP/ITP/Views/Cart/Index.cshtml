@model IEnumerable<ITP.Models.CartClass>

@{
    ViewData["Title"] = "Index";
    
}

<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

<style>

    .two h1 {
        text-transform: capitalize;
        text-align: center;
        position: relative;
        padding: 5px;
        margin: 0;
        font-family: "Raleway", sans-serif;
        font-weight: 300;
        font-size: 40px;
        color: #080808;
        -webkit-transition: all 0.4s ease 0s;
        -o-transition: all 0.4s ease 0s;
        transition: all 0.4s ease 0s;
    }

  
    .two h1:before {
        width: 28px;
        height: 5px;
        display: block;
        content: "";
        position: absolute;
        bottom: 3px;
        left: 50%;
        margin-left: -14px;
        background-color: #b80000;
    }

    .two h1:after {
        width: 100px;
        height: 1px;
        display: block;
        content: "";
        position: relative;
        margin-top: 25px;
        left: 50%;
        margin-left: -50px;
        background-color: #b80000;
    }

    .two h1 span {
        display: block;
        font-size: 0.5em;
        line-height: 1.3;
        font-size: 13px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 4px;
        line-height: 3em;
        padding-left: 0.25em;
        color: rgba(0, 0, 0, 0.4);
        padding-bottom: 10px;
        text-align: center;
    }

 .my-custom-scrollbar {
        position: relative;
        height: 500px;
        overflow: auto;
    }



    .table-wrapper-scroll-y {
        display: block;
    }


</style>

<div class="two" style=" margin-top :2%;">
    <h1>
        Cart Details of Orders
        <span>Editing/Cancelling/View</span>
    </h1>
</div>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<br>
<div  style="width:100%; margin-left:3%; margin-bottom :3%;">

<table class="table table-striped table-hover table-dark table-wrapper-scroll-y my-custom-scrollbar" >
    <thead class="table table-striped table-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quntity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Image
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody> 
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quntity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <img src="~/Images/Items/@item.ImageName" height="70px" object-fit="contain" />
            </td>
            <td>
                <a class="btn btn-outline-info " asp-action="Details" asp-route-id="@item.Id"><i class="far fa-info-square"></i></a>
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
            </td>
            <td>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>