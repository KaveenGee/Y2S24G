                    <div class="card p-2">
                        <div class="p-info px-3 py-3">
                            <div>
                                <h5 class="mb-0">@item.ICategory</h5> <span>@item.IBrand</span>
                            </div>
                            <div class="p-price d-flex flex-row">
                                <span>Rs</span>
                                <h1>@item.IUPrice</h1>
                            </div>
                            <div class="heart"> <i class="bx bx-heart"></i> </div>
                        </div>
                        <div class="text-center p-image"> <img src="~/Images/Items/@item.ImageName"> </div>
                        <div class="p-about">
