<div class="container bootstrap snippets bootdey">
    <div class="cover-container">
        <div class="social-cover">
            <img src="~/Images/Feedback/giphy.gif" width="973" height="350" />
        </div>
        <div class="social-desc">
            <div class="visible-md visible-sm">
                <h1 class="fg-white black">Welcome to TLC Life Parter</h1>
                <h5 class="fg-white tag">Share your experience with us</h5>
                <div style="margin-top:10px;">
                </div>
            </div>
        </div>
        <div class="social-avatar">
            <img class="photo" src="~/Images/Feedback/5_stars.gif" >
            <h4 class="fg-white text-center feed">OUR CUSTOMERS LOVE OUR PRODUCTS</h4>
            <div class="text-center">
                    <a class="btn btn-outline-light" asp-action="CreateFeed" asp-controller="Feed"> Create Feed</a>
            </div>
        </div>
    </div>
</div>            