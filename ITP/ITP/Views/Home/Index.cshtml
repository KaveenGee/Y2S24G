                        </div>
                        <div class="buttons d-flex flex-row gap-3 px-3">
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.IItemId" class="btn btn-danger w-100 pull-right btn-outline-info">Deatils</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</from>


