@model ITP.Models.AttendeesModel
@{ 
    ViewData["Title"] = "Edit";
}
<br />

<h2 class="text-info">Edit Product</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmpId"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="EmpId" />
                    <input asp-for="EmpId" class="form-control" readonly />
                </div>
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmpName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmpName" class="form-control" readonly />
                </div>
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkDate" class="form-control" type="date" />
                </div>
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkStartTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkStartTime" class="form-control" type="time" />
                </div>
                <span asp-validation-for="WorkStartTime" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkEndTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkEndTime" class="form-control" type="time" />
                </div>
                <span asp-validation-for="WorkEndTime" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Availability"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Availability" class="form-control" />
                </div>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OverTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OverTime" class="form-control" disabled />
                </div>
                <span asp-validation-for="OverTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>

        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
                return false;
            };
            </script>

        }
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

