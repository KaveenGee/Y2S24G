        <div class="col-6">
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add New Product</a>
        </div>

    </div>*@

<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(c => c.Empid)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Empname)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpNIC)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpGender)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpContactNo)
                </th>
                @*<th>
                    @Html.DisplayNameFor(c => c.EmpDateofApproval)
                </th>*@
                <th>
                    @Html.DisplayNameFor(c => c.EmpAge)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.EmpSalary)
                </th>
                @*<th></th>*@

            </tr>
        </thead>

        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="7" class="text-center" style="color:red;">No Match Data</td>
                </tr>
            }
            else {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Empid</td>
                        <td>@item.Empname</td>
                        <td>@item.EmpNIC</td>
                        <td>@item.EmpAddress</td>
                        <td>@item.EmpEmail</td>
                        <td>@item.EmpGender</td>
                        <td>@item.EmpStatus</td>
                        <td>@item.EmpContactNo</td>
                        @*<td>@item.EmpDateofApproval</td>*@
                        <td>@item.EmpAge</td>
                        <td>@item.EmpSalary</td>
                        @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Empid }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.Empid }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Remove", "Delete", new { id = item.Empid }, new { @class = "btn btn-danger" })
                    </td>*@
                    </tr>
                }
            }
        </tbody>


    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>

    <script type="text/javascript">
        $(document).ready( function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        } );
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}