@model ITP.Models.AttendeesModel
@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmpId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmpId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="EmpName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="EmpName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkStartTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkStartTime" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="WorkStartTime" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="WorkEndTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="WorkEndTime" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="WorkEndTime" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Availability"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Availability" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="OverTime"></label>
                </div>
                <div class="col-8">
                    <input asp-for="OverTime" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="OverTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="Edit" asp-route-id="@Model.EmpId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

